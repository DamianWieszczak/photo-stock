
<h1>Albums</h1>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.description %></td>
        <td><%= link_to 'Show', album, class: "badge badge-secondary" %></td>
        <td><%= link_to 'Edit', edit_album_path(album), class: "badge badge-warning" %></td>
        <td><%= link_to 'Destroy', album, class: "badge badge-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path, class: "btn btn-primary" %>
